\AtBeginDocument{%
  \usepackage{fancyhdr}
  \fancypagestyle{normal}{
    \fancyhf{}
    \lhead{Prepared: \prepared}
    \chead{No.: \docno}
    \rhead{Rev.: \rev}
    \lfoot{{\py@HeaderFamily \@title}}
    \rfoot{{\py@HeaderFamily\thepage}}
  }

  \fancypagestyle{plain}{
    \fancyhf{}
    \lhead{Prepared: \prepared}
    \chead{No.: \docno}
    \rhead{Rev.: \rev}
    \lfoot{{\py@HeaderFamily \@title}}
    \rfoot{{\py@HeaderFamily\thepage}}
  }
}

